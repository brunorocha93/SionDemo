<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroActivity">

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/secondaryDarkColor"
        android:text="Registrar"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <EditText
        android:id="@+id/edtNombreRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/secondaryColor"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/lbNombre"
        app:layout_constraintTop_toBottomOf="@+id/lbNombre" />

    <EditText
        android:id="@+id/edtApellidosRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/secondaryColor"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/lbApellidos"
        app:layout_constraintTop_toBottomOf="@+id/lbApellidos" />

    <EditText
        android:id="@+id/edtEdadRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/secondaryColor"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/lbEdad"
        app:layout_constraintTop_toBottomOf="@+id/lbEdad" />

    <EditText
        android:id="@+id/edtNacionalidadRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/secondaryColor"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/lbNacionalidad"
        app:layout_constraintTop_toBottomOf="@+id/lbNacionalidad" />

    <EditText
        android:id="@+id/edtCorreoRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/secondaryColor"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/lbCorreo"
        app:layout_constraintTop_toBottomOf="@+id/lbCorreo" />

    <TextView
        android:id="@+id/lbNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="Nombre"
        android:textColor="@color/primaryTextColor"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbApellidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Apellidos"
        android:textColor="@color/primaryTextColor"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/edtNombreRegistro"
        app:layout_constraintTop_toBottomOf="@+id/edtNombreRegistro" />

    <TextView
        android:id="@+id/lbEdad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Edad"
        android:textColor="@color/primaryTextColor"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/edtApellidosRegistro"
        app:layout_constraintTop_toBottomOf="@+id/edtApellidosRegistro" />

    <TextView
        android:id="@+id/lbNacionalidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Nacionalidad"
        android:textColor="@color/primaryTextColor"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/edtEdadRegistro"
        app:layout_constraintTop_toBottomOf="@+id/edtEdadRegistro" />

    <TextView
        android:id="@+id/lbCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Correo"
        android:textColor="@color/primaryTextColor"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/edtNacionalidadRegistro"
        app:layout_constraintTop_toBottomOf="@+id/edtNacionalidadRegistro" />

    <TextView
        android:id="@+id/lbCI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="CI"
        android:textColor="@color/primaryTextColor"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/edtCorreoRegistro"
        app:layout_constraintTop_toBottomOf="@+id/edtCorreoRegistro" />

    <EditText
        android:id="@+id/edtCI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/secondaryColor"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/lbCI"
        app:layout_constraintTop_toBottomOf="@+id/lbCI" />

</androidx.constraintlayout.widget.ConstraintLayout>