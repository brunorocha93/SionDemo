<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/txvNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:text="Brian Castro"
        android:textColor="@color/primaryTextColor"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txvEdadNac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="19 aÃ±os"
        android:textColor="@color/primaryTextColor"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/txvNombre"
        app:layout_constraintTop_toBottomOf="@+id/txvNombre" />

    <TextView
        android:id="@+id/txvCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Boliviano"
        android:textColor="@color/primaryTextColor"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/txvEdadNac"
        app:layout_constraintTop_toBottomOf="@+id/txvEdadNac" />

</androidx.constraintlayout.widget.ConstraintLayout>